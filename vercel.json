{
  "version": 2,
  "builds": [
    {
      "src": "/*.php",
      "use": "vercel-php-fpm"
    },
    {
      "src": "/assets/**",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1.php"
    }
  ]
}
